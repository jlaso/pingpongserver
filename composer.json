    "name": "jlaso/pingpongserver",
    "description": "Sample to illustrate App development with Titanium Appcelerator and connection with a PHP backend",
    "autoload": {
        "psr-0": {

            "lib":                            "",

            "app\\config":                    "",
            "app\\command":                   "",
            "app\\models\\core":              "",
            "app\\models\\core\\Form":        "",
            "app\\models\\core\\Pagination":  "",
            "app\\models\\core\\Search":      "",
            "app\\models\\Entity":            "",
            "Entity":                         "app/models/",
            "Security":                       "app/models/",

            "app\\controller\\api-rest":      "",
            "Router":                         "app/controller/core/"

        }
    },
    "scripts": {
        "post-install-cmd": [
            "php assets_install"
