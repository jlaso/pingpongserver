        "post-update-cmd": [
            "php assets_install"
        ]
    },
    "require": {
        "php":              ">=5.3.0",
        "slim/slim":        "2.2.0",
        "slim/extras":      "2.*",
        "twig/twig":        "1.13.1",
        "j4mie/paris" :     "1.2.0",
        "symfony/finder" :  "2.3.0",
        "symfony/config":   "2.2.0",
        "symfony/yaml":     "2.1.0",
        "twbs/bootstrap":   "3.2.0",
        "jlaso/slim-routing-manager": "*"
    },
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin/"
    }
}
