{% extends "frontend/layout.html.twig" %}

{% block content %}

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

        <h1 class="page-header">Overview</h1>

        <div class="row placeholders">
            <div class="col-xs-8 col-sm-4 placeholder">
                <img data-src="holder.js/300x300/auto/text:{{ player.gold.nick }}/lava" class="img-responsive" alt="Gold player: {{ player.gold.nick }}">
                <h4>Gold player</h4>
                <span class="text-muted">{{ player.gold.points }} points</span>
            </div>
            <div class="col-xs-8 col-sm-4 placeholder">
                <img data-src="holder.js/250x250/auto/text:{{ player.silver.nick }}/gray" class="img-responsive" alt="Silver player: {{ player.silver.nick }}">
                <h4>Silver player</h4>
                <span class="text-muted">{{ player.silver.points }} points</span>
            </div>
            <div class="col-xs-8 col-sm-4 placeholder">
                <img data-src="holder.js/200x200/auto/text:{{ player.bronze.nick }}/vine" class="img-responsive" alt="Bronze player: {{ player.bronze.nick }}">
                <h4>Bronze player</h4>
                <span class="text-muted">{{ player.bronze.points }} points</span>
            </div>
        </div>

    </div>

{% endblock content %}